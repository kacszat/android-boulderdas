<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C70DA">

    <Button
        android:id="@+id/bt_menu"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/white"
        android:text="Powrót"
        android:textColor="#F46AFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_save_settings"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:text="Zapisz"
        android:textColor="#F46AFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/bt_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="420dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <TextView
            android:id="@+id/tv_actual_level"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTint="#FFFFA5"
            android:text="Aktualny poziom:"
            android:textColor="#F46AFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt_game_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#F46AFF"
            android:text="Reset stanu gry"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_more_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5A5A"
            android:text=""
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_select_moves_label"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTint="#FFFFA5"
            android:layout_marginTop="30dp"
            android:text="Poziom trudności:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Spinner
            android:id="@+id/spinner_game_modes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_timer_label"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFA5"
            android:text="Liczba żyć (na poziom):"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_game_lifes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white" />

        <Switch
            android:id="@+id/switch_bonus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="Gra z Bonusami"
            android:textColor="@color/black"
            android:background="#F46AFF"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>